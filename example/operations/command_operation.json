{
    "type": "COMMAND",
    "name": "Clone repository",
    "description": "Clones a git repository to a local directory.",
    "metadata": {
        "example": "git clone <GIT_REPOSITORY>"
    },
    "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "command": {
                "type": "string",
                "description": "The full command to execute."
            },
            "base_path": {
                "type": "string",
                "description": "The path to cd to before command execution."
            }
        },
        "required": [
            "command"
        ],
        "additionalProperties": false,
        "errorMessages": {
            "required": "The 'command' property is required.",
            "additionalProperties": "Invalid property found."
        }
    }
}